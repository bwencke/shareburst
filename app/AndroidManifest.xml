<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shareburst"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.Shareburstblue" >
        <activity
            android:name="com.example.shareburst.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.shareburst.ResultActivity"
            android:label="@string/title_activity_result" >
        </activity>
        <activity
            android:name="com.example.shareburst.LoginActivity"
            android:label="@string/title_activity_login" >
        </activity>
        <activity
            android:name="com.example.shareburst.HomeActivity"
            android:label="@string/title_activity_home" >
        </activity>
        <activity
            android:name="com.example.shareburst.RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName="com.example.shareburst.LoginActivity" >
        </activity>
        <activity
            android:name="com.example.shareburst.PreferenceActivity"
            android:label="@string/title_activity_preference"
            android:parentActivityName="com.example.shareburst.HomeActivity" >
        </activity>
        <activity
            android:name="com.example.shareburst.GroupsActivity"
            android:label="@string/title_activity_groups" >
        </activity>
        <activity
            android:name="com.example.shareburst.NewGroupActivity"
            android:label="@string/title_activity_new_group" >
        </activity>
        <activity
            android:name="com.example.shareburst.UsersActivity"
            android:label="@string/title_activity_users" >
        </activity>
    </application>

</manifest>
